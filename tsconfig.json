{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "moduleResolution": "node", // または "nodenext"
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"] 
  },
  "include": ["src/**/*"]
}
