{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "lib": ["es2016", "dom"],
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*", "stage.config.json"],
    "exclude": ["node_modules"]
}
